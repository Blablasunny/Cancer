                android:padding="20dp"/>

            <Button
                android:id="@+id/btn_cancer_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="20dp"
                android:background="@drawable/ic_right_arrow"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="5dp">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_rect_text"
            app:neumorph_shapeType="flat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancer_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/cancer_4"
                android:textSize="20sp"
                android:textColor="@color/dark_gray"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:padding="20dp"/>

            <Button
                android:id="@+id/btn_cancer_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="20dp"
                android:background="@drawable/ic_right_arrow"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="5dp">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_rect_text"
            app:neumorph_shapeType="flat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancer_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/cancer_5"
                android:textSize="20sp"
                android:textColor="@color/dark_gray"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:padding="20dp"/>

            <Button
                android:id="@+id/btn_cancer_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="20dp"
                android:background="@drawable/ic_right_arrow"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="5dp">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_rect_text"
            app:neumorph_shapeType="flat"/>

        <LinearLayout
            android:layout_width="match_parent"
