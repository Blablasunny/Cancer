<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AccountActivity"
    android:background="@color/smoky_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/diagnosis"
        android:textColor="@color/dark_gray"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="5dp">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_rect_text"
            app:neumorph_shapeType="flat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancer_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/cancer_1"
                android:textSize="20sp"
                android:textColor="@color/dark_gray"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:padding="20dp"/>

            <Button
                android:id="@+id/btn_cancer_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="20dp"
                android:background="@drawable/ic_right_arrow"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="5dp">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_rect_text"
            app:neumorph_shapeType="flat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancer_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/cancer_2"
                android:textSize="20sp"
                android:textColor="@color/dark_gray"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:padding="20dp"/>

            <Button
                android:id="@+id/btn_cancer_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="20dp"
                android:background="@drawable/ic_right_arrow"/>

        </LinearLayout>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="5dp">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_rect_text"
            app:neumorph_shapeType="flat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancer_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
