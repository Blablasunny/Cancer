<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TypeOfCancer1Activity"
    android:orientation="vertical"
    android:weightSum="100">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22">
        <View
            android:id="@+id/union3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_3" />
        <View
            android:id="@+id/union2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_2" />
        <Button
            android:id="@+id/bt_back"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/rec_white"
            android:text="@string/back"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
        <View
            android:id="@+id/bt_back_shadow"
            android:layout_width="150dp"
            android:layout_height="62dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rec_gray" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="34">
        <ImageView
            android:id="@+id/imv"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/rec_img" />
        <TextView
            android:id="@+id/tv"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">
        <Button
            android:id="@+id/bt_send"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rec"
            android:text="@string/send"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="12sp" />
        <View
            android:id="@+id/bt_send_shadow"
            android:layout_width="160dp"
            android:layout_height="72dp"
            android:background="@drawable/rec_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="22dp"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">
        <View
            android:id="@+id/union"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:background="@drawable/img" />
        <View
            android:id="@+id/pulse"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/img_1" />
    </FrameLayout>


</LinearLayout>